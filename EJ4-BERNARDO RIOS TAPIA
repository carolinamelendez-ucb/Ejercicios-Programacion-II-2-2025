#include <iostream>

void invertirArreglo(int* punteroInicio, int tamano) {
    int* punteroFin = punteroInicio + tamano - 1;

    while (punteroInicio < punteroFin) {
        int temp = *punteroInicio;
        *punteroInicio = *punteroFin;
        *punteroFin = temp;

        punteroInicio++;
        punteroFin--;
    }
}

int main() {
    using namespace std;

    int tamanoArreglo;
    cout << "Ingresa el tamano del arreglo: ";
    cin >> tamanoArreglo;

    if (tamanoArreglo <= 0) {
        cout << "Error: El tamano del arreglo debe ser un numero positivo." << endl;
        return 1;
    }

    int* arreglo = new int[tamanoArreglo];

    cout << "Ingresa los " << tamanoArreglo << " elementos del arreglo:" << endl;
    for (int i = 0; i < tamanoArreglo; ++i) {
        cout << "Elemento " << i + 1 << ": ";
        cin >> *(arreglo + i);
    }

    cout << "\nEl arreglo original es: ";
    for (int i = 0; i < tamanoArreglo; ++i) {
        cout << *(arreglo + i) << " ";
    }
    cout << endl;

    invertirArreglo(arreglo, tamanoArreglo);

    cout << "El arreglo invertido es: ";
    for (int i = 0; i < tamanoArreglo; ++i) {
        cout << *(arreglo + i) << " ";
    }
    cout << endl;

    delete[] arreglo;
    arreglo = nullptr;

    return 0;
}
