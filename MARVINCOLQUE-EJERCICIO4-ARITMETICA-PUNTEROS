#include <iostream>

using namespace std;

int main()
{
	int TAM;

	cout << "Introduce el tamanio del array: " << endl;
	cin >> TAM;

	int* arr = new int[TAM];

	cout << "Introduce los valores del array: " << endl;
	for (int i = 0; i < TAM; i++)
	{
		cin >> arr[i];
	}

	int *ptrIn = arr;
	int *ptrFi = arr + TAM - 1;


    while (ptrIn < ptrFi) {
        int temp = *ptrIn;
        *ptrIn = *ptrFi;
        *ptrFi = temp;

        ptrIn++;
        ptrFi--;
    }

    cout << "El array invertido seria: " << endl;
    for (int i = 0; i < TAM; i++) {
        cout << arr[i] << " ";
    }

    delete[] arr;
}
