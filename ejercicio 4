#include <iostream>
using namespace std;

int main() {
    int* arr;
    int n;

    cout << "Ingrese el tamaÃ±o del arreglo: ";
    cin >> n;

    arr = new int[n];

    cout << "Ingrese los " << n << " elementos:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> *(arr + i);
    }
    int* inicio = arr;
    int* fin = arr + n - 1;
    while (inicio < fin) {
        int temp = *inicio;
        *inicio = *fin;
        *fin = temp;
        inicio++;
        fin--;
    }

    cout << "Arreglo invertido:" << endl;
    for (int i = 0; i < n; i++) {
        cout << *(arr + i) << " ";
    }
    cout << endl;

    delete[] arr;

    return 0;
}
