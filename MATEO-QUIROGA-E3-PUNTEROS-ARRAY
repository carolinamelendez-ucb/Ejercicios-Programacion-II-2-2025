#include <iostream>
using namespace std;

int main() 
{
    int n;
    cout << "Ingrese el numero de elementos: ";
    cin >> n;

    int* arr = new int[n];

    cout << "Ingrese los elementos:";
    for (int i = 0; i < n; i++) 
    {
        cin >> arr[i];
    }

    int* p = arr; 
    int maximo = *p; 

    for (int i = 1; i < n; i++) 
    {
        p++;
        if (*p > maximo)
        {
            maximo = *p;
        }
    }

    cout << "El valor maximo es: " << maximo << endl;

    delete[] arr; 
    return 0;
}
