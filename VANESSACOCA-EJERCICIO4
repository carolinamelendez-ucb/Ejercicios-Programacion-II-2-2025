#include <iostream>
using namespace std;
///pedir un arreglo con punteros, pedir al usuario el tama√±o del array
int main(){
    int tam;
    cout<<"ingrese el tamano del array"<<endl;
    cin>>tam;
    int array [tam];
    int *ptr  =nullptr;
    for(int *ptr=array; ptr<array+tam; ptr++){
        cin>>*ptr;
    }
    for(int *ptr=array; ptr<array+tam; ptr++){
        cout<<*ptr;
    }
    delete[] array;
return 0;
}
