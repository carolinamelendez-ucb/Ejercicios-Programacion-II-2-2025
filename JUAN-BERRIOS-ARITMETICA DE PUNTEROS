#include <iostream>
using namespace std;

void reverseArray(int* arr, int size) {
    int* start = arr;
    int* end = arr + size - 1;

    while (start < end) {
        int temp = *start; // camvbio de valore
        *start = *end;
        *end = temp;

        start++; //direccion de los puunteros 
        end++;
    }
}

int main() {
    int size;
    cout << "Enter the array size: " << endl; // pregunta el tamaño del arreglo
    cin >> size;
    if (size <= 0) { // valida el tamaño 
        cout << "Size must be greater than 0." << endl;
        return 1;
    }
    int* array = new int[size]; /// llega a crear el tamaño del arraeglo 
    cout << "Enter " << size << " elements:" << endl;//relleno del arreglo
    for (int i = 0; i < size; i++) {
        cout << "Element " << i + 1 << ": ";
        cin >> *(array + i);
    }

    cout << "Original array: "; // mostrar el arreglo del puntero 
    for (int i = 0; i < size; i++) {
        cout << *(array + i) << " ";
    }
    cout << endl;
    reverseArray(array, size); // arreglo invertido

    cout << "Reversed array: " << endl;  ///mostrar el array invertido 
    for (int i = 0; i < size; i++) {
        cout << *(array + i) << " ";
    }
    cout << endl;
    delete[] array; /// liberar la memoria 

    return 0;
}
