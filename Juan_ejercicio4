#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Ingresa el tamaÃ±o: ";
    cin >> n;

    int* arr = new int[n];

    cout << "Ingresa " << n << " numeros:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> *(arr + i);  
    }

    int* inicio = arr;      
    int* fin = arr + n - 1;  

    while (inicio < fin) {
        int temp = *inicio;
        *inicio = *fin;
        *fin = temp;

        inicio++;
        fin--;
    }

    cout << "Arreglo invertido:" << endl;
    for (int i = 0; i < n; i++) {
        cout << *(arr + i) << " ";
    }
    cout << endl;

    delete[] arr;

    return 0;
}
